VAR
	sAmsNetId	: STRING(23) := '';
	
	DB_ID		: UDINT := 0;
	isOpened	: BOOL := FALSE;
	
	_TIMEOUT	: TIME := T#3S;
	
	_FBOPENCONN	: FB_DBConnectionOpen;
	_FBCLOSECONN: FB_DBConnectionClose;
	_FBRELOAD	: FB_DBReloadConfig;
END_VAR]]></Declaration>
