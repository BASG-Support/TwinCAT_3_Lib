    <Method Name="OPEN" Id="{98cf4f32-e65d-4442-aa7e-5703dadb3f78}" FolderPath="METHODS\">
      <Declaration><![CDATA[{attribute 'object_name' := 'Open'}
METHOD OPEN : DINT
VAR_INPUT
	DATABASE_HANDLE : UDINT;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF NOT isOpened THEN
	_FBOPENCONN(
		sNetID:= sAmsNetId, 
		hDBID:= DATABASE_HANDLE, 
		bExecute:= TRUE, 
		tTimeout:= _TIMEOUT );
	IF _FBOPENCONN.bError THEN  
		_FBOPENCONN(
			sNetID:= sAmsNetId, 
			hDBID:= DB_ID, 
			bExecute:= FALSE, 
			tTimeout:= _TIMEOUT );
		OPEN := 1;
		RETURN;
	ELSIF NOT _FBOPENCONN.bBusy THEN
		_FBOPENCONN(
			sNetID:= sAmsNetId, 
			hDBID:= DB_ID, 
			bExecute:= FALSE, 
			tTimeout:= _TIMEOUT );
		isOpened := TRUE;
		DB_ID := DATABASE_HANDLE;
		Open := -1;
		RETURN;
	ELSE
		Open := 0;
		RETURN;
	END_IF
ELSE
	OPEN := 2;
	RETURN;
END_IF]]></ST>
      </Implementation>
    </Method>
