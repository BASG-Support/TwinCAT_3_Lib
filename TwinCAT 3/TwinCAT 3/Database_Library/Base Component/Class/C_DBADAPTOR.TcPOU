    <Method Name="REACTIVATE_CONFIGURATION" Id="{054042db-8860-4416-bcf9-1bb77c029830}" FolderPath="METHODS\">
      <Declaration><![CDATA[METHOD REACTIVATE_CONFIGURATION : DINT
VAR_INPUT
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[_FBRELOAD(
	sNetID:= sAmsNetID, 
	bExecute:= TRUE, 
	tTimeout:= _TIMEOUT, 
	bBusy=> , 
	bError=> , 
	nErrID=> );
IF _FBRELOAD.bError THEN
	_FBRELOAD(bExecute:= FALSE);
	REACTIVATE_CONFIGURATION := 1;
	RETURN;
ELSIF NOT _FBRELOAD.bBusy THEN
	_FBRELOAD(bExecute:= FALSE);
	REACTIVATE_CONFIGURATION := -1;
	RETURN;
ELSE
	REACTIVATE_CONFIGURATION := 0;
	RETURN;
END_IF]]></ST>
      </Implementation>
    </Method>
    <Method Name="CLOSE" Id="{090301b5-d7a0-4c7e-83a9-c565563887ff}" FolderPath="METHODS\">
      <Declaration><![CDATA[{attribute 'object_name' := 'Close'}
METHOD CLOSE : DINT
VAR_INPUT
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF isOpened THEN
	_FBCLOSECONN(
		sNetID:= sAmsNetID, 
		hDBID:= DB_ID, 
		bExecute:= TRUE, 
		tTimeout:= _TIMEOUT );
	IF _FBCLOSECONN.bError THEN 
		_FBCLOSECONN(
			sNetID:= sAmsNetId, 
			hDBID:= DB_ID, 
			bExecute:= FALSE, 
			tTimeout:= _TIMEOUT );
		Close := 1;
		RETURN;
	ELSIF NOT _FBCLOSECONN.bBusy THEN
		_FBCLOSECONN(
			sNetID:= sAmsNetId, 
			hDBID:= DB_ID, 
			bExecute:= FALSE, 
			tTimeout:= _TIMEOUT );
		Close := -1;
		RETURN;
	ELSE
		Close := 0;
		RETURN;
	END_IF
ELSE
	CLOSE := 2;
	RETURN;
END_IF]]></ST>
      </Implementation>
    </Method>
